@import "_mixins.styl"

html
  height 100%

body
  padding 0
  margin 0
  font 15px 'SilkscreenNormal', Arial, sans-serif
  background-color #dcdcdf
  text-align: center
  color #566050
  height 100%

h1, h2, h3
  font-weight normal

.view-container
  min-height 100%

.clearfix:after
  content "."
  display block
  clear both
  visibility hidden
  line-height 0
  height 0
 
.clearfix 
  display inline-block

#container
  background-color #444
  margin 0
  padding 0
  margin-left auto
  margin-right auto
  width 796px
  min-height 100%

#header
  padding-top 30px

#wrapper
  padding-top 20px
  padding-bottom 20px
  padding-left 44px
  padding-right 44px

.display
  position relative
  border-radius(15px)
  background-color #e4f9d7
  border 1px solid #000
  shadow(rgba(white, 0.5))
  padding-bottom: 20px
  min-height 350px
  
.with-background
  background-image url(/img/screenbg.png)
  background-repeat repeat-y

.display-overlay
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background-image url(/img/stripes.png)
  border-radius(14px)
  top-shadow(rgba(black, 0.6))
  pointer-events none

#left-pane
  float left
  width 170px
  height 100%
  text-align left
  padding-left 20px
  h3
    color #e0f8d1

  ul
    list-style none
    padding 0
    margin 0
    li
      color #566050

#right-pane
  float left
  text-align left
  padding 20px
  padding-left 40px
  width 430px

  h2
    font-weight normal
    font-size 16px
    margin-top 0

.chat
  position relative
  margin-top 20px
  border-radius(15px)
  background-color #e4f9d7
  border 1px solid #000
  min-height 20px
  margin-left 13px
  margin-right 13px
  text-align left
  color #e0f8d1
  padding-left 11px
  padding-top 1px
  background-image url(/img/chatbg.png)
  background-repeat repeat-y
  shadow(rgba(white, 0.5))
  form
    display inline
    input
      margin-left 20px
      border none
      background-color #e4f9d7
      background transparent
      width 600px
      outline none
      font 16px 'SilkscreenNormal', Arial, sans-serif
      color #566050

.slot
  margin-top 20px
  border-radius(3px)
  height 6px
  margin-left 13px
  margin-right 13px
  background-color #181818
  shadow(rgba(white, 0.5))

.paper
  margin-top -3px
  margin-left 18px
  margin-right 18px
  background-color white
  text-align left
  position relative
  
  .slot-shadow
    height 10px
    position absolute
    top 0
    left 0
    width 100%
    z-index 99999
    hard-top-shadow(rgba(black, 0.6))

  ul
    margin 0
    margin-top -3px
    padding 0
    list-style none
    li
      height 0px
      overflow hidden
      transition(height, 0.5s)
      position relative

      .message-wrapper
        font 14px 'MyUnderwoodRegular', 'SilkscreenNormal', Arial, sans-serif
        overflow hidden
        white-space nowrap
        background-image url(/img/paper.png)
        background-repeat repeat-y
        padding-left 27px
        padding-right 27px
        padding-top 8px
        padding-bottom 7px
        width 100%
        position absolute
        bottom 0px
        .name
          color #000

  .paper-bottom
    background-color #444
    background-image url(/img/paper-bottom.png)
    background-repeat repeat-x
    height 17px
    width 100%

.listcontainer
  width 660px
  padding 20px

  ul
    list-style none
    padding 0

    li
      padding-top 10px
  
ul#answers
  list-style none
  padding-left 0
  li
    min-height 24px
    padding-bottom 2px
  
a
  color #00B7FF
  text-decoration none
  
.tab_container
  clear both
  float left
  width 100%
  
.clickable
  padding 4px
  width 400px
  display inline-block
  cursor pointer
  color #eff9d6
  background-color #9dad92

.clickable:hover
  background-color #6c7565
  opacity 0.7  
  
.selected
  background-color #6c7565
