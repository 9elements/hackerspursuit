.view-container
  .display.profile.listcontainer
    - if (typeof error !== "undefined")
      h2 Error #{error}
    - else
      h2 Profile #{profileName}
      
      ul.profile-list
        li
          .score #{Math.round(realScore / categoryCounts.all * 100)}% Hacker
          .details #{realScore} / #{categoryCounts.all}

      h3 Hacker by category
      ul.profile-list
        - each category in categoryScore
          li 
            .score #{Math.round(category.score / categoryCounts[category.name.toLowerCase()] * 100)}% #{category.name}
            .details #{category.score || "0"} / #{categoryCounts[category.name.toLowerCase()]}

      h3 Badges
      ul.profile-list
        - each badge in badges
          li 
            .score #{badge.toUpperCase()}
            .details Description here

      - if (badges.length == 0)
        = "No badged earned yet"

      h3 Social Connect
      - if (proposeTwitter || proposeFacebook)
        ul.social-connect
          - if (proposeTwitter)
            li
              a.clickable(href="/auth/twitter") Connect with Twitter
          - if (proposeFacebook)
            li
              a.clickable(href="/auth/facebook") Connect with Facebook
      - else
        = "All services connected"

    .display-overlay
    .display-gradient