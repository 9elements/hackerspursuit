.view-container
  - if(!everyauth.loggedIn)
    #view-login.view-content
      h2 Login
      .login-container
        ul
          li
            a(href="/auth/twitter") Login with Twitter
          li
            a(href="/auth/facebook") Login with Facebook
  - else
    #view-wait.view-content
      .display
        .display-overlay
        h2 PLEASE WAIT FOR THE NEXT QUESTION
        #countwait
    #view-game.view-content
      .display.with-background.clearfix
        #left-pane
          h3 SCOREBOARD
          ul#scoreboard

        #right-pane
          h2#question Question
          ul#answers
            li
              #a1.clickable Answer 1
            li
              #a2.clickable Answer 2
            li
              #a3.clickable Answer 3
            li
              #a4.clickable Answer 4  
          
          .countdown COUNTDOWN&nbsp
            span#countdown

        .display-overlay

      .chat CHAT
        input(type='text', id='chat-msg')

    h3 Messages
    .notice-container
    ul#alert
    ul#notice

    - if (everyauth.user)
      #userid(style="display: none;") #{everyauth.user.id}

    #server-host(style="display: none;")= host
    #server-port(style="display: none;")= port